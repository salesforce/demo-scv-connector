{
    "extends": "eslint:recommended",
    "rules": {
        "strict": ["warn", "global"],
        "eqeqeq": [2, "smart"],
        'no-console': 'off'
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2018
    },
    "globals": {
        "BroadcastChannel": true
    }
}
